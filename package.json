{
  "name": "anota-delivery",
  "version": "0.1.0",
  "description": "Sistema de Gest√£o de Delivery - 3 Porquinhos",
  "author": "3 Porquinhos <contato@3porquinhos.com.br>",
  "private": true,
  "main": "main.js",
  "scripts": {
      "dev": "next dev",
      "build": "next build",
      "start": "next start -p ${PORT:-3000}",
      "electron-dev": "electron .",
      "gerar-exe": "node scripts/build-desktop.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "lucide-react": "^0.469.0",
    "next": "^15.1.11",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "recharts": "^2.15.0"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@types/react": "^18.3.18",
    "@types/react-dom": "^18.3.5",
    "cross-env": "^10.1.0",
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8",
    "eslint": "^8.57.0",
    "eslint-config-next": "^15.1.11",
    "typescript": "^5.7.2"
  },
  "build": {
    "appId": "com.3porquinhos.delivery",
    "productName": "3 Porquinhos Delivery",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "server.js",
      "out/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": ".env",
        "to": ".env"
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "asar": true,
    "asarUnpack": [
      "**/*.node",
      "out/**/*"
    ]
  }
}
